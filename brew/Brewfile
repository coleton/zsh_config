# Taps
tap 'homebrew/cask'

# Binaries
brew 'ack'
brew 'coreutils'
brew 'dos2unix'
brew 'fzf'
brew 'geoip'
brew 'go'
brew 'htop'
brew 'jq'
brew 'mas'
brew 'nmap'
brew 'node'
brew 'p7zip'
brew 'terraform'
brew 'tree'
